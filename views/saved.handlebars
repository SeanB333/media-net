<section>
    <!-- Articles.  -->
    {{#each saved}}
    <div class="row">
        <div class="col-12">
            <div class="card shadow m-3">
                <div class="card-body text-light bg-dark rounded">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{summary}}</p>
                    <p class="card-text"><a href="{{link}}" target="_blank">Read more</a></p>
                    <p class="card-text">Note: {{note}}</p>
                    <a href="/delete-one/{{id}}" class="btn btn-outline-danger" role="button" aria-disabled="true">Delete</a>
                    <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal">Add
                        Note</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <hr>
                    <p class="card-text">Note: {{note}}</p>
                    <hr>
                    <form action='note/{{id}}' method='post'>
                        <div class="form-group">
                            <label for="noteFormControlInput">Add a note</label>
                            <input id="noteInput" name="noteId" type="text" class="form-control">
                            <br>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-primary" id="noteBtn">Save note</button>
                    <a href="delete-note/{{id}}" class="btn btn-outline-danger" role="button" aria-disabled="true">Delete
                        note</a>
                </div>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</section>